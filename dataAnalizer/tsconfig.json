{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDirs": [
      "src",
      "test"
    ],
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@core/*": [
        "../core/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}