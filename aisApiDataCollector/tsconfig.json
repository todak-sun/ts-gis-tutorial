{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": [
      "src"
    ],
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@core/*" : [
        "../core/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}